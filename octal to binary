#include <stdio.h>

int main() {
    int octal, decimal = 0, i = 0, rem;
    int binary[32], j = 0;

    printf("Enter an octal number: ");
    scanf("%d", &octal);

    
    while(octal != 0) {
        rem = octal % 10;
        decimal += rem * pow(8, i);
        octal = octal / 10;
        i++;
    }

    
    while(decimal > 0) {
        binary[j] = decimal % 2;
        decimal = decimal / 2;
        j++;
    }

    printf("Binary equivalent: ");
    for(int k = j - 1; k >= 0; k--) {
        printf("%d", binary[k]);
    }

    return 0;
}
