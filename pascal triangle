#include <stdio.h>

int main() {
    int n = 5, i, j;
    int coef;

    for(i = 0; i < n; i++) {
        coef = 1;

        for(j = 0; j < n - i; j++)
            printf("  ");

        for(j = 0; j <= i; j++) {
            printf("%4d", coef);
            coef = coef * (i - j) / (j + 1);
        }
        printf("\n");
    }

    return 0;
}
